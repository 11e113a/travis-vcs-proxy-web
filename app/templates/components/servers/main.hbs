<div class='servers-page-main'>
  <h1>VCS Servers</h1>

  <div class='top-bar'>
    <div class='setup-input'>
      <h3>Find a server</h3>
      <div class='entry-field'>
        <Input
          @id='serverUrl'
          @value={{this.serverUrl}}
          @type='text'
          class='text-field'
          {{ on 'keyup' this.searchByUrl }}
        />
      </div>
    </div>
    {{#unless this.searchMode}}
    <LinkTo @class="button--green" @route="servers.add">
      Add Server
    </LinkTo>
    {{/unless}}
  </div>
  {{#unless this.searchMode}}
  <div class='content-box'>
    {{outlet}}
  </div>
  {{else}}
  {{#if this.foundServer}}
  <Servers::SearchResult
    @foundServer={{this.foundServer}}
    @clearSearch={{this.clearSearch}}
  />
  {{else}}
  <div class='content-box'>
    <Servers::Add
      @searchNoServer={{true}}
      @url={{this.serverUrl}}
      @clearSearch={{this.clearSearch}}
    />
  </div>
  {{/if}}
  {{/unless}}
</div>