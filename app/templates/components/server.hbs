<div class="servers-page-header">
  <div class="left-bar">
    <div class="page-path">
      <LinkTo @route="servers">VCS Servers</LinkTo> / <LinkTo @route="server.edit" @model={{this.args.server.id}}>{{this.args.server.name}}</LinkTo> / <span class="page-path-active">Repositories</span>
