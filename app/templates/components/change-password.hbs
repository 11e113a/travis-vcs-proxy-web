<div class="settings-page-container settings-page-container--center">
  <h2 class='text-black ta-c fs-36 mt-24 mb-32'>Change Password</h2>
  <div>
    <h3 class="fs-14 fw-600 tt-u">Old Password</h3>
    <div class='entry-field password'>
      <Input
        @id='password'
        @type='password'
        class='text-field'
      />
      <div class='password-eye-icon' {{ on 'click' this.togglePassword }}>
        <SvgImage @name="icon-visible" />
      </div>
    </div>
  </div>
  <div class="mt-16">
    <h3 class="fs-14 fw-600 tt-u">New Password</h3>
    <div class='entry-field password'>
      <Input
        @id='password'
        @type='password'
        class='text-field'
      />
      <div class='password-eye-icon' {{ on 'click' this.togglePassword }}>
        <SvgImage @name="icon-visible" />
      </div>
    </div>
    <div class='password-requirements'>
      Password must include at least 6 characters including at least one non-alphabetic character (number or special character)
    </div>
  </div>
  <div>
    <LinkTo @route='index' @tagName='button' @class='button--white w-156 no-border'>Cancel</LinkTo>
    <button type='button' class='button--green w-156 ml-20'>Change Password</button>
  </div>
</div>
