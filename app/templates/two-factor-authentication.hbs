{{page-title "Two Factor Authentication"}}

<main class='auth-page'>
  <div class='auth-page-container'>
    <div class='auth-window'>
      <SvgImage @name="travisci-proxy-logo-grayscale" @class="travis-logo" />
      <h2 class='mb-0 mt-64 text-black'>Two-factor authentication</h2>
      <p class='fs-18 w-450 text-black'>Open the two-factor authentication app on your device and enter the 6-digit verification code generated by the app.</p>

      <div>
        <h3>Authentication code</h3>
        <div class='entry-field'>
          <Input
            @id='auth_code'
            @value={{this.auth_code}}
            @type='text'
            @placeholder='6 digit code'
            class='text-field'
          />
        </div>
        <div class='float-right turf-green fw-600'>
          Whatâ€™s this?
        </div>
      </div>
      <div>
        <button type='button' class='button button--green button--very-large mt-24'>Verify</button>
      </div>
    </div>
  </div>
</main>
<SimpleFooter />
